/**
 * ExtJS request responses utils
 * @author BestSoft
 */
class Ext
{
	/**
	 * Sends response to Ext JS client
	 * @access public
	 * @param boolean $success    Either true or false - indicates successful request
	 * @param mixed $data    Response data
	 */
	public static function sendResponse($success, $data = null)
	{
		$data = (array)$data;
		$data['success'] = $success ? true : false;
		echo App_Json::encode($data);
	}

	/**
	 * Sends error response to Ext JS client
	 * @access public
	 * @param string $message    An error message
	 * @param mixed $data    Optional. Additional error data
	 */
	public static function sendErrorResponse($message, $data = null)
	{
		self::sendResponse(false, array(
			'errors' => array(
				'reason' => $message
			)
		));
	}
}
