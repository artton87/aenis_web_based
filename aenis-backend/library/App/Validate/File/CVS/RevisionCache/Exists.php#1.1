/**
 * Validator for checking existence of uploaded file
 * @package Framework\Validate
 */
class App_Validate_File_Exists extends App_Validate_Abstract
{
	/**
	 * Checks if file is uploaded
	 * @param string $file_key    Key of $_FILES array to be tested
	 * @return boolean
	 */
	public function isValid($file_key)
	{
		return isset($_FILES[$file_key]) && is_uploaded_file($_FILES[$file_key]['tmp_name']);
	}
}
